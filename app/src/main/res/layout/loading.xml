<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <View
        android:id="@+id/logoImage"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@color/cinza"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <LinearLayout
        android:id="@+id/taskInputLayout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/cinza"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

    </LinearLayout>

    <TextView
        android:id="@+id/tvCreated"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@color/cinza"
        android:textColor="#444"
        app:layout_constraintStart_toEndOf="@+id/tvCreatedCount"
        app:layout_constraintTop_toTopOf="@+id/tvCreatedCount" />

    <TextView
        android:id="@+id/tvCreatedCount"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_count_loading"
        android:paddingHorizontal="6dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskInputLayout"
        app:layout_constraintStart_toEndOf="@+id/tvCreated"
        />

    <TextView
        android:id="@+id/tvDone"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@color/cinza"
        app:layout_constraintStart_toEndOf="@+id/tvDoneCount"
        app:layout_constraintTop_toTopOf="@+id/tvDoneCount" />

    <TextView
        android:id="@+id/tvDoneCount"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_count_loading"
        android:paddingHorizontal="6dp"
        android:layout_marginStart="60dp"
        app:layout_constraintEnd_toEndOf="@+id/taskInputLayout"
        app:layout_constraintStart_toEndOf="@+id/tvCreated"
        app:layout_constraintTop_toTopOf="@+id/tvCreated" />

    <View
        android:id="@+id/list"
        android:layout_width="350"
        android:layout_height="100dp"
        android:background="@color/cinza"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/taskInputLayout"
        app:layout_constraintStart_toStartOf="@+id/tvCreatedCount"
        app:layout_constraintTop_toBottomOf="@+id/tvCreatedCount" />


</androidx.constraintlayout.widget.ConstraintLayout>
