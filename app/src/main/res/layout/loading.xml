<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E0DCE4">

    <View
        android:id="@+id/text"
        android:layout_width="104dp"
        android:layout_height="17dp"
        android:layout_marginStart="24dp"
        android:background="#C1C1C1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/circle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_count_loading"
        app:layout_constraintStart_toEndOf="@+id/text"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/text1"
        android:layout_width="104dp"
        android:layout_height="17dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        android:background="#C1C1C1"
        app:layout_constraintEnd_toStartOf="@+id/circle1"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/circle1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_count_loading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/content"
        android:layout_width="327dp"
        android:layout_height="75dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/coponent_loading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circle" />

    <View
        android:id="@+id/content1"
        android:layout_width="327dp"
        android:layout_height="75dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/coponent_loading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content" />

    <View
        android:id="@+id/content2"
        android:layout_width="327dp"
        android:layout_height="75dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/coponent_loading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content1" />

    <View
        android:id="@+id/content3"
        android:layout_width="327dp"
        android:layout_height="75dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/coponent_loading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content2" />

    <View
        android:id="@+id/content4"
        android:layout_width="327dp"
        android:layout_height="75dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/coponent_loading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content3" />
</androidx.constraintlayout.widget.ConstraintLayout>
