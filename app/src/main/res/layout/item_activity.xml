<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="2dp"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="#F4F4F5">

        <ImageView
            android:id="@+id/imgTaskStatus"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_circle_outline"
            android:layout_marginEnd="12dp"
            android:tint="#9333EA" />

        <TextView
            android:id="@+id/tvTaskText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Integer urna interdum massa libero auctor neque turpis turpis semper. Duis vel sed fames integer."
            android:textColor="#1E1E1E"
            android:textSize="14sp"
            android:maxLines="3"
            android:ellipsize="end" />

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@null"
            android:src="@drawable/ic_delete"
            android:tint="#737373"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
